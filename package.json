{
  "name": "craiglist-tracker",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "(trap 'sudo systemctl stop mongod.service; echo Stopping MongoDB service...; kill -- -$$' EXIT; sudo systemctl start mongod; echo 'Starting MongoDB service...'; pip install -r requirements.txt; npm install; cd src; (cd backend; python3 -m flask run -p 5001 --debug &); cd ..; vite dev)",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "typescript": "^5.2.2",
    "vite": "^5.3.1"
  }
}
